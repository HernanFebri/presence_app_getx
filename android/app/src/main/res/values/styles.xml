<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema yang diterapkan saat proses aplikasi dimulai (saat Dark Mode dimatikan) -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Matikan splash screen dengan menghapus atau menggunakan warna transparan -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Tema yang digunakan setelah proses aplikasi dimulai -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Pastikan tidak ada window background yang mengganggu -->
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>
